{
  "name": "splunk-forwarder",
  "version": "1.0.0",
  "description": "Forward log request to remove Splunk server",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcgov/MOH-MSP-Enrolment.git"
  },
  "homepage": "",
  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production gulp",
    "start": "node $NODE_DEBUG_OPTION build/index.js server",
    "start-local-service": "bin/start-local-service.sh",
    "start-mock-logger": "nodemon bin/mock-logger.js",
    "send-test-log": "bin/send-test-log.sh",
    "dev": "nodemon --watch src --inspect=0.0.0.0:9229 --exec node ./src/index.js server",
    "test": "vitest --exclude '**/integration/*.spec.js'",
    "test:integration": "vitest run -- --no-threads",
    "test:coverage": "vitest run --coverage",
    "test:lint": "echo \"WARNING: No LINTer specified\" && exit 0",
    "test:schema": "echo \"WARNING: No schema specified\" && exit 0"
  },
  "dependencies": {
    "body-parser": "^2.0.0",
    "express": "^5.0.1",
    "express-basic-auth": "^1.1.3",
    "ini": "^2.0.0",
    "json-stringify-safe": "^5.0.1",
    "jsonwebtoken": "^9.0.0",
    "request": "^2.83.0",
    "serve-index": "^1.9.1",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.0.7",
    "gulp": "^5.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^6.0.0-alpha.1",
    "nodemon": "^3.1.4",
    "vitest": "^3.0.7"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
